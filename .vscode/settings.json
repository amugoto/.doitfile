{
  /* editor */
  "editor.fontFamily": "'IBMPlexMono-MediumItalic', 'BlexMono Nerd Font Mono'",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.renderWhitespace": "none",
  "editor.cursorBlinking": "expand",
  "editor.tabSize": 2,
  "editor.guides.bracketPairs": true,
  "diffEditor.ignoreTrimWhitespace": false,

   /* theme */
  "workbench.productIconTheme": "material-product-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark",
  "color-highlight.markRuler": false,
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#FFD700",
    "editorBracketHighlight.foreground2": "#DA70D6",
    "editorBracketHighlight.foreground3": "#ff9900",
    "editorBracketHighlight.foreground4": "#87CEFA",
    "editorBracketHighlight.foreground5": "#80ffbb",
    "editorBracketHighlight.foreground6": "#FF628C",
    "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
  },

  /* terminal */
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "Hyper.app",


  /* explorer */
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,

  /* prettier */
  "prettier.configPath": "/Users/ingon/workspace/.prettierrc",
  "editor.formatOnSave": true,


  /* php */
  "php.validate.enable" : false,
  "php.validate.executablePath" : "/opt/homebrew/bin/php",
  "php.validate.run" : "onSave",
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedProperties": false,
  "intelephense.diagnostics.undefinedVariables": false,
  

  /* JS, TS */
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[php]": {
    "editor.autoIndent": "full",
    "editor.indentSize": 4
  },

  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },

  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.zip": "default"
  },

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
}